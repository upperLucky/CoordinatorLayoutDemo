<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wyk.coordinatorlayoutdemo.MainActivity">

    <Button
        android:text="与SnackBar使用"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:onClick="_snackBar"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="@+id/activity_main"/>

    <Button
        android:text="与ToolBar使用"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:onClick="_toolBar"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/button"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="32dp"/>

    <Button
        android:text="ToolBar(视差效果)"
        android:layout_width="156dp"
        android:layout_height="50dp"
        android:id="@+id/button3"
        android:onClick="_toolBarWith"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginStart="32dp"
        app:layout_constraintLeft_toLeftOf="@+id/activity_main"
        android:layout_marginLeft="32dp"/>
</android.support.constraint.ConstraintLayout >
